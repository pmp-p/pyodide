#!/bin/bash

# get the absolute path to the root directory
ROOTDIR=$(${HOSTPYTHON} -c 'import pathlib, sys; \
                     print(pathlib.Path(sys.argv[1]).resolve().parents[1])' \
          "${BASH_SOURCE[0]}")

export PYTHONPATH="${PYTHONPATH}:${ROOTDIR}"
${HOSTPYTHON} -m pyodide_build "$@"
